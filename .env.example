# PostgreSQL Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/dbname
# atau gunakan individual credentials:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=coffee_db
DB_USER=postgres
DB_PASSWORD=your_password

# MySQL Database Configuration (NEW)
MYSQL_DATABASE_URL=mysql://user:password@host:3306/dbname
# atau gunakan individual credentials:
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=coffee_db
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password

# MongoDB Database Configuration (NEW)
MONGODB_URL=mongodb://localhost:27017
# untuk MongoDB Atlas gunakan:
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=coffee_db

# Connector Configuration
CONNECTOR_API_KEY=your-secure-api-key-here
QUERY_TIMEOUT=30000

# Server Configuration
PORT=3000
